// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TipoConta {
  comprador
  anunciante
}

model Users {
  id              String         @id
  nome            String         @unique
  email           String         @unique
  cpf             String         @unique
  celular         String
  data_nascimento String
  descricao       String
  conta           TipoConta
  password        String
  Address         Address[]
  Anouncements    Anouncements[]
  comments        Comments[]
}

model Address {
  id          String  @id
  cep         String
  cidade      String
  rua         String
  estado String
  numero      Int
  complemento String?
  User        Users   @relation(fields: [user_id], references: [id])
  user_id     String
}

model Anouncements {
  id            String  @id
  marca         String
  modelo        String
  ano           Int
  combustivel   String
  quilometragem Float
  cor           String
  preco_fipe    Float
  preco         Float
  descricao     String
  User          Users   @relation(fields: [user_id], references: [id])
  user_id       String

  Images   Images[]
  Comments Comments[]
  @@map("anouncements")
}

model Images {
  id             String       @id
  imagem_capa    String
  imagem1        String
  imagem2        String
  Anouncement    Anouncements @relation(fields: [anouncement_id], references: [id])
  anouncement_id String
}

model Comments {
  id             String       @id
  comentario     String
  User           Users        @relation(fields: [user_id], references: [id])
  user_id        String
  Anouncement    Anouncements @relation(fields: [anouncement_id], references: [id])
  anouncement_id String
}
